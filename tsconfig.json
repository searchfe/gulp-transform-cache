{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es5",
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "preserve"
  },
  "include": [ "src/**/*.*", "src/**/*.jsx", "test/**/*.*"]
}
